<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="@dimen/_5sdp"
    app:cardCornerRadius="@dimen/_3sdp"
    app:cardElevation="@dimen/_3sdp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp">
        <TextView
            android:id="@+id/notification_date_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="29 October 2022, 15:38"
            android:fontFamily="@font/cairo_semibold"
            android:textSize="@dimen/_7ssp"
            android:textColor="@color/dark_gray"/>
        <TextView
            android:id="@+id/notification_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/notification_date_time"
            tools:text="Oops! You’re out of cash"
            android:fontFamily="@font/cairo_bold"
            android:textSize="@dimen/_10ssp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/notification_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/notification_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Your account fees need to be renewed for you to continue using our app, the payment process is easy and won’t take long."
            android:fontFamily="@font/cairo_regular"
            android:textSize="@dimen/_8ssp"
            android:textColor="@color/dark_gray"
            android:layout_marginTop="@dimen/_5sdp"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/go_payment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/notification_description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="@dimen/_40sdp"
            android:layout_marginEnd="@dimen/_40sdp"
            app:cornerRadius="@dimen/_15sdp"
            android:text="@string/go_to_payment"
            android:textAllCaps="false"
            android:fontFamily="@font/cairo_bold"
            android:textSize="@dimen/_8ssp"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/_10sdp"
            android:visibility="gone"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>